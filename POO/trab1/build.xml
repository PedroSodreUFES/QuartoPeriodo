<?xml version="1.0" encoding="UTF-8"?>
<project name="Vereadores" default="jar" basedir=".">

    <!-- Nome do JAR final e classe principal -->
    <property name="jar-name" value="vereadores.jar"/>
    <property name="main-class" value="App"/>

    <!-- Compilar os arquivos .java -->
    <target name="compile">
        <javac srcdir="." destdir="." includeantruntime="false"/>
    </target>

    <!-- Criar o JAR -->
    <target name="jar" depends="compile">
        <jar destfile="${jar-name}" basedir=".">
            <manifest>
                <attribute name="Main-Class" value="${main-class}"/>
            </manifest>
            <include name="*.class"/>
        </jar>
    </target>

    <!-- Limpar os arquivos compilados -->
    <target name="clean">
        <delete>
            <fileset dir="." includes="*.class"/>
        </delete>
        <delete file="${jar-name}"/>
    </target>

</project>